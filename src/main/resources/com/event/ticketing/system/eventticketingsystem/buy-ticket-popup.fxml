<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.event.ticketing.system.eventticketingsystem.controller.BuyTicketPopupController"
      stylesheets="@login-style.css"
      spacing="20" alignment="CENTER"
      prefWidth="500" prefHeight="300">

    <Label text="Enter the number of tickets:"
           styleClass="popup-label" />

    <TextField fx:id="ticketCountField" promptText="Enter Number of Tickets to Buy"
               styleClass="popup-textfield" />

    <Button fx:id="buyButton" text="Buy Tickets"
            onAction="#handleBuyButton"
            styleClass="popup-button" />
</VBox>
