<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.event.ticketing.system.eventticketingsystem.controller.BuyTicketController"
      spacing="20" alignment="TOP_CENTER"
      style="-fx-background-color: linear-gradient(to bottom, #1c92d2, #f2fcfe); -fx-padding: 20;">

    <!-- Header -->
    <Label text="Select Event to Buy Tickets"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1a237e;" />

    <!-- Back Button -->
    <Button fx:id="backButton" text="Back to Main Menu"
            onAction="#handleBackButton"
            style="-fx-background-color: #1a237e; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10; -fx-border-radius: 5; -fx-background-radius: 5;" />

    <!-- Event Cards Container -->
    <HBox spacing="30" alignment="CENTER"
          style="-fx-padding: 20;">

        <!-- Event 1 -->
        <VBox spacing="10" alignment="CENTER"
              style="-fx-background-color: white; -fx-padding: 10; -fx-border-color: lightgray; -fx-border-width: 1; -fx-border-radius: 10; -fx-background-radius: 10;">
            <Label text="SOSL Christmas Concert 2024"
                   style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <Button text="Buy Tickets for Event 1"
                    onAction="#handleBuyTicketsForEvent1"
                    style="-fx-background-color: #1a237e; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10; -fx-border-radius: 5; -fx-background-radius: 5;" />
        </VBox>

        <!-- Event 2 -->
        <VBox spacing="10" alignment="CENTER"
              style="-fx-background-color: white; -fx-padding: 10; -fx-border-color: lightgray; -fx-border-width: 1; -fx-border-radius: 10; -fx-background-radius: 10;">
            <Label text="Ayaskanthaya"
                   style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <Button text="Buy Tickets for Event 2"
                    onAction="#handleBuyTicketsForEvent2"
                    style="-fx-background-color: #1a237e; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10; -fx-border-radius: 5; -fx-background-radius: 5;" />
        </VBox>

        <!-- Event 3 -->
        <VBox spacing="10" alignment="CENTER"
              style="-fx-background-color: white; -fx-padding: 10; -fx-border-color: lightgray; -fx-border-width: 1; -fx-border-radius: 10; -fx-background-radius: 10;">
            <Label text="Ada Hamu Wemuda Api VOL 5.0"
                   style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <Button text="Buy Tickets for Event 3"
                    onAction="#handleBuyTicketsForEvent3"
                    style="-fx-background-color: #1a237e; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10; -fx-border-radius: 5; -fx-background-radius: 5;" />
        </VBox>

    </HBox>
</VBox>
