<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.event.ticketing.system.eventticketingsystem.controller.AddTicketPopupController"
      stylesheets="@login-style.css"
      spacing="20" alignment="CENTER"
      prefWidth="500" prefHeight="300">

    <Label text="Enter the number of tickets:"
           styleClass="popup-label" />

    <TextField fx:id="ticketCountField" promptText="Enter Ticket count"
               styleClass="popup-textfield" />

    <Button fx:id="addButton" text="Add Tickets"
            onAction="#handleAddButton"
            styleClass="popup-button" />
</VBox>

